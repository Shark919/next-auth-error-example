generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  salutation    String?
  firstName     String?
  lastName      String?
  title         String?
  email         String    @unique
  phone         String?
  password      String
  emailVerified DateTime?
  confirmed     Boolean?
  image         String?
  language      String?
  resetToken    String?
  blacklisted   Boolean?
}
